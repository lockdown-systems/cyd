{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": [
      "electron",
    ]
  },
  "include": [
    "src",
    "forge.config.ts"
  ],
  "exclude": [
    "node_modules",
    "eslint__js"
  ]
}
