{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": [
            "esnext",
            "dom",
            "es6"
        ],
        "types": [
            "node",
            "vite/client"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts"
    ],
    "references": [
        {
            "path": "../../tsconfig.node.json"
        }
    ]
}