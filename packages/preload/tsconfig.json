{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "include": [
        "./**/*.ts"
    ],
    "references": [
        {
            "path": "../../tsconfig.node.json"
        }
    ]
}